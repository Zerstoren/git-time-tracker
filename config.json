{
  "mode": "debug",
  "check_interval": "10m",
  "debounce_interval": "2s",
  "write_to_file": true,
  
  "file_path": "../time-tracker.txt",
  "log_file_path": "../time-logs.log",

  "repositories": {
    "time-tracker": {
      "path": "/path/to/repository",
      "exclude": [
        "/node_modules",
        "/dist",
        "/.git"
      ]
    }
  }
}